<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- this code sets up necessary XML namespace to define and validate Spring beans -->

    <bean id="carSpecification" class="com.constructor.injection.Specification">
        <property name="make" value="Toyota"></property>
        <property name="model" value="Corolla"></property>
    </bean>
    <bean id="myCar" class="com.constructor.injection.Car">
       <constructor-arg ref="carSpecification"/>
    </bean>


</beans>
